{
  "project": {
    "name": "Gavin Adventure",
    "type": "html5-game",
    "version": "1.0.0"
  },
  "deployment": {
    "source": "github-actions",
    "target": "github-pages",
    "branch": "gh-pages"
  },
  "required_files": {
    "root": [
      "index.html",
      "main.js",
      "style.css"
    ],
    "directories": {
      "engine": {
        "required": true,
        "files": [
          "core.js",
          "input.js",
          "physics.js",
          "collision.js",
          "renderer.js",
          "audio.js",
          "particles.js"
        ]
      },
      "game": {
        "required": true,
        "files": [
          "constants.js",
          "sprites.js",
          "player.js",
          "enemies.js",
          "collectibles.js",
          "level.js",
          "hud.js",
          "scenes.js",
          "save.js"
        ]
      },
      "tools": {
        "required": false,
        "description": "Optional development tools"
      }
    }
  },
  "validation": {
    "html": {
      "required_tags": ["canvas", "script"],
      "required_meta": ["viewport", "charset"]
    },
    "javascript": {
      "entry_point": "main.js",
      "modules": ["engine", "game"]
    }
  },
  "github_pages": {
    "url_pattern": "https://{username}.github.io/{repository}",
    "deployment_delay": "5-10 minutes",
    "cache_headers": {
      "html": "no-cache",
      "assets": "cache-control: public, max-age=31536000"
    }
  }
}
